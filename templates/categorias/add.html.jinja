{% extends 'base.html.jinja' %}

{% block content %}

    <h1> {% block title %} Agregar categoría {% endblock %}</h1>
        <form method="POST" Content-Type='application/json'>
            <div>
                <label for="nombre">Nombre categoría </label><br>
                <input type="text" name="nombre" 
                placeholder="Nombre"
                value="{{ request.form['nombre'] }}">
                <br>
            </div> 
            <div>
                <label for="descripcion">Descripción </label><br>
                <textarea type="text" 
                name="descripcion"
                placeholder="Descripción"
                rows="8"
                cols="30">
                    {{ request.form['descripcion'] }}
                </textarea>
                <br>
            </div>
            <input type="submit" value="Submit">
        </form>
{% endblock %}