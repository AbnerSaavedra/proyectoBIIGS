{% extends 'base.html.jinja' %}

{% block content %}
<h1>{% block title %} Categorías {% endblock %}</h1>
<a href="{{url_for('addCategoria')}}">Add categoría</a>
<table id="customers">
  <tr>
    <th>Nombre</th>
    <th>Descripción</th>
    <th>Acciones</th>
  </tr>
    {% for element in elementsList %}
        <tr>
            <td>{{ element.nombre }}</td>
            <td>{{ element.descripcion }}</td>
            <td class="acciones">
                <button class="button button1" onclick="window.location.href='/categoria/detail/{{element._id}}'" class="button button1">Detalle</button>
                <button class="button button2" onclick="window.location.href='/categoria/update/{{element._id}}'" class="button button1">Modificar</button>
                <form action="{{ url_for('deleteCategoria', id=element._id) }}" method="post">
                    <input class="button button3" type="submit" value="Eliminar">
                </form>
        </tr>
    {% endfor %}
    </table>
